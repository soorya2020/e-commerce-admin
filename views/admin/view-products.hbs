<section>
  <div class="container">
    <div class="row">
      <a class="btn btn-success ml-auto mt-5" href="/admin/add-product">Add Product</a>
    </div>
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          {{#each products}}
          <th scope="row">{{inc @index}}</th>
          <td>{{this.name}}</td>
          <td>{{this.price}}</td>
          <td>{{this.category}}</td>
          <td>{{this.description}}</td>
          <td><img style="width: 80px;" src="/product-images/{{this._id}}.jpg" alt="" srcset=""></td>
          <td>
            <a onclick="alert('not completed')" class="btn btn-primary text-light">Edit</a>
          </td>
          <td>
          <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger " onclick="return confirm('do you want to delete{{this.Name}} ?')">Delete</a>
          </td>
        </tr>
        {{/each }}

      </tbody>
    </table>
  </div>


</section>